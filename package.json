{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "engines": {
    "node": "18.4.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "prepare": "husky install",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix --color",
    "format:fix": "prettier --write --cache 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:watch": "mocha -r ts-node/register test/**/*.spec.ts --watch --watch-files test/**/*.spec.ts",
    "test:coverage": "nyc npm test",
    "test:report": "nyc --reporter=html --all npm test",
    "build": "rm -rfd dist/ && tsc -p tsconfig.json"
  },
  "keywords": [],
  "author": "Juan Sebasti√°n Agudelo @juansacdev <juansac.me@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "chai": "4.3.6",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  }
}
